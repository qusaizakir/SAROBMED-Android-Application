<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:actionModeBackground">@color/colorGrey</item>-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionMenuTextColor">@color/colorGrey</item>
        <item name="actionModeCloseButtonStyle">@style/actionModeArrow</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24px</item>
    </style>


    <style name="actionModeArrow" parent="Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:tint">@color/colorWhite</item>
    </style>

    <style name="ActionModeStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/colorGrey</item>
        <item name="android:tint">@color/colorGrey</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="titleTextStyle">@style/CustomActionModeTextStyle</item>
    </style>

    <style name="CustomActionModeTextStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/colorWhite</item>
    </style>








    <style name="LoginTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="RCReportTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="RCReportData" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/open_sans</item>
    </style>

    <style name="RCReportLocation" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AddFormListTitleCard" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/colorGrey</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="AddFormListTitle" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textSize">36sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AddFormEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="hintTextAppearance">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="AddFormLayout" parent="Base.Widget.MaterialComponents.TextInputLayout">
        <item name="hintTextAppearance">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

</resources>
